{
    "workbench.colorTheme": "Default Dark+",
    "window.openFoldersInNewWindow": "on",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "editor.cursorBlinking": "solid",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ff0000",
        // "editor.selectionBackground": "#c979f7",
        // "editor.selectionHighlightBackground": "#394185",
        // "editor.findMatchHighlightBackground": "#264eff",
        // "editor.findMatchBorder": "#ffffff",
        // "editor.findMatchBackground": "#ae00ff",
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "github.copilot.chat.localeOverride": "ja",
    "http.proxyAuthorization": null,
    "workbench.startupEditor": "none",
    "terminal.integrated.copyOnSelection": true,
    "[python]": {
        // 拡張機能のBlack Formatterを使う場合には必ず指定する
        "editor.defaultFormatter": "ms-python.black-formatter",

        // ファイルの保存時にフォーマットを自動実行する場合
        "editor.formatOnSave": true,
    },
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E203,W503,W504"
    ],

    // 最大文字数などのオプション引数を指定する場合
    "black-formatter.args": [
        "--line-length=120"
    ],
    "mypy-type-checker.args": [
        "--warn-return-any",
        "--no-implicit-optional",
        "--disallow-untyped-calls",
        "--disallow-untyped-defs",
        "--ignore-missing-imports",
        "--follow-imports=skip"
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "editor.minimap.enabled": false,
    // "editor.cursorStyle": "block",
}